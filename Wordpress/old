FROM httpd:2.4

RUN apt-get update

RUN apt-get install wget unzip

RUN apt-get install -y ghostscript libapache2-mod-php php php-bcmath php-curl php-imagick php-intl php-json php-mbstring php-mysql php-xml php-zip 



RUN mkdir -p /srv/www
RUN chown www-data: /srv/www
RUN curl https://wordpress.org/latest.tar.gz | sudo -u www-data tar zx -C /srv/www
